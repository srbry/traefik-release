---
name: traefik

templates:
  traefik.toml.erb: config/traefik.toml
  ctl: bin/ctl

packages:
- traefik

consumes:
- name: atc
  type: atc
  optional: true

properties:
  mode:
    description: Traefik config mode, currently only supports "web"
    default: web

  read_only:
    description: Set the Traefik REST API to read-only mode.
    default: true

  port:
    description: Traefik web admin port
    default: 8080
