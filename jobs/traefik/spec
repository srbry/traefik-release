---
name: traefik

templates:
  ctl.erb: bin/ctl

packages:
- traefik

properties:
  mode:
    description: Traefik config mode, currently only supports "web"
    default: web

  read_only:
    description: Set the Treafik REST API to read-only mode.
    default: true

  port:
    description: Traefik web admin port
    default: 8080
