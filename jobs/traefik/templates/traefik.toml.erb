<%
  traefik_mode = p("mode")
  if traefik_mode != "web"
    raise ArgumentError, "Expected mode to be 'web' but was: '#{traefik_mode}'"
  end
%>
[<%= traefik_mode %>]

address = ":<%= p("port") %>"
readOnly = <%= p("read_only") %>

<% if p("https") %>
defaultEntryPoints = ["http", "https"]
[entryPoints]
  [entryPoints.http]
  address = ":80"
    [entryPoints.http.redirect]
    entryPoint = "https"
  [entryPoints.https]
  address = ":443"
    [entryPoints.https.tls]
<% else %>
defaultEntryPoints = ["http"]
[entryPoints]
  [entryPoints.http]
  address = ":80"
<% end %>

<% consul_link = false %>
<% if_link("consul_server") do |consul| %>
<% consul_link = true %>
[consul]

endpoint = "localhost:8500"
watch = true
prefix = "traefik"

<%# [consul.tls]
ca = "/var/vcap/jobs/consul_agent/config/certs/ca.crt"
cert = "/var/vcap/jobs/consul_agent/config/certs/server.crt"
key = "/var/vcap/jobs/consul_agent/config/certs/server.key"
insecureskipverify = false %>
<% end %>
<% if_link("atc") do |atc| %>
<% unless consul_link%>
[file]
[backends]
  [backends.atc]
    [backends.atc.healthcheck]
    path = "/"
    interval = "10s"

<% atc.instances.each do |instance| %>
    [backends.atc.servers.<%= instance.index %>]
    url = "http://<%= instance.address %>:<%= link('atc').p('bind_port') %>"
    weight = 1
<% end %>

[frontends]
  [frontends.atc]
  backend = "atc"
<% if p("https") %>
  entrypoints = ["http", "https"]
<% end %>
<% end %>
<% end %>
